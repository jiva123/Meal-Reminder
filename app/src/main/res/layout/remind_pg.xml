<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F25409A8"
            app:title="Reminder"
            app:logo="@drawable/reminder_logo"
            app:titleTextColor="#FFF"
            app:titleMarginStart="30dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#F25409A8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-40dp"
        android:background="@drawable/bg">


        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="90dp"
            android:background="#FAFFFDFD">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/meals"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:text=" Meals Reminders"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders to have your meal"
                    android:textSize="17dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/breakfast"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="50dp"
                    />

                <LinearLayout
                    android:id="@+id/time_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="250dp"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_access_alarm_black_24dp"/>

                <TextView
                    android:id="@+id/bftime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ajkkfkdjkj"
                    android:textSize="17dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/lunch"
                    android:layout_marginTop="140dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="50dp"
                    />

                <LinearLayout
                    android:id="@+id/time_piclunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="250dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_access_alarm_black_24dp"/>

                <TextView
                    android:id="@+id/lctime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    />

                </LinearLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/snacks"
                    android:layout_marginTop="180dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snacks"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="50dp"
                    />

                <LinearLayout
                    android:id="@+id/time_picsnacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="250dp"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_access_alarm_black_24dp"/>

                <TextView
                    android:id="@+id/sncktime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/dinner"
                    android:layout_marginTop="220dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinner"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="50dp"
                    />

                <LinearLayout
                    android:id="@+id/time_picdinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="250dp"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_access_alarm_black_24dp"/>

                <TextView
                    android:id="@+id/dntime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"/>

                </LinearLayout>

                <Switch
                    android:id="@+id/mrtstart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="310dp"
                    />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btm"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/color"
            app:itemIconTint="#00C853"
            app:itemTextColor="#FFD600"
            app:menu="@menu/bottom_menus" />
    </LinearLayout>

</LinearLayout>