<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dw"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F25409A8"
            app:title="Calculator"
            app:logo="@drawable/cal_logo"
            app:titleTextColor="#FFF"
            app:titleMarginStart="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp"
            android:background="#F25409A8">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:background="@drawable/bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="160dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/bmi_bg"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/bmibtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="51dp"
                        android:layout_marginBottom="23dp"
                        android:src="@drawable/bmi_cal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="70dp"
                        android:layout_marginEnd="63dp"
                        android:text="BMI"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </RelativeLayout>



            </LinearLayout>

            <!--LinearLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="-100dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/age_bg"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/agbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/bmiimg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="51dp"
                        android:layout_marginBottom="23dp"
                        android:src="@drawable/ic_cake_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="70dp"
                        android:layout_marginEnd="63dp"
                        android:text="Age"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </RelativeLayout>



            </LinearLayout-->

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="-100dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/step_counter_bg"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/stepsbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="51dp"
                        android:layout_marginBottom="23dp"
                        android:src="@drawable/step_counter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="70dp"
                        android:layout_marginEnd="30dp"
                        android:text="Step Counter"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </RelativeLayout>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/color"
            app:menu="@menu/bottom_menus"
            app:itemIconTint="#00C853"
            app:itemTextColor="#FFD600"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
